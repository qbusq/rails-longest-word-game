<h1>New game</h1>
<p>Find me in app/views/games/new.html.erb</p>
<p><%= @letters %></p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What is the longest word you can find?</label>
  <input type="text" name="word">
  <input type="hidden" name="random" value=<%= @letters %>>
  <input type="submit" value="Play">
</form>
